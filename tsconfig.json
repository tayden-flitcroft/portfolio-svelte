{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "es2022",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "preserveValueImports": false,
        "sourceMap": true,
        "target": "es2021",
        "strict": true,
        "strictNullChecks": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.svelte", "*.cjs", "*.mjs", "vite.config.ts", "webpack.config.ts", "svelte.config.js", "svelte.config.js", "vite.config.ts", "postcss.config.js", "mock-routes.ts", "src/global.d.ts"],
    "exclude": ["node_modules", "dist", "out"],
    "references": [{ "path": "./tsconfig.node.json" }]

}